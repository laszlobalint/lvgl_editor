<component>
    <previews>
        <preview width="320" height="144" />
    </previews>
    <styles>
        <style name="panel_size" width="320" height="144" />
        <style name="panel_light" bg_color="#accent2_light" />
        <style name="panel_dark" bg_color="#accent2_dark" />
        <style name="panel_content_disabled" opa_layered="60" />
        <style name="stats" width="100%" height="content" layout="flex" flex_main_place="space_between" pad_ver="16" />
        <style name="slider_main" height="20" bg_opa="20" />
        <style name="slider_main_light" bg_color="#surface_primary_light" />
        <style name="slider_main_dark" bg_color="#surface_primary_dark" />
        <style name="slider_indicator_light" bg_color="#surface_primary_light" />
        <style name="slider_indicator_dark" bg_color="#surface_primary_dark" />
        <style name="slider_knob" pad_all="2" border_width="8" shadow_width="4" shadow_offset_y="2" shadow_spread="0" shadow_opa="41" />
        <style name="slider_knob_light" bg_color="#surface_primary_light" border_color="#bg_primary_light" />
        <style name="slider_knob_dark" bg_color="#surface_primary_dark" border_color="#bg_primary_dark" />
    </styles>
   <view extends="panel">
        <style name="panel_size" />
        <bind_style subject="theme" name="panel_light" ref_value="0" />
        <bind_style subject="theme" name="panel_dark" ref_value="1" />

        <panel_header width="100%">
            <lv_label text="Speaker volume" style_text_font="geist_semibold_20" />
            <switch bind_checked="speaker"></switch>
        </panel_header>
        
            
        <lv_label bind_text="speaker_vol" width="100%" style_text_font="geist_semibold_28" style_text_letter_space="-1" >
            <style name="panel_content_disabled" selector="disabled" />
            <bind_state_if_eq subject="speaker" ref_value="0" state="disabled" />
        </lv_label>
        <lv_slider bind_value="speaker_vol" style_margin_top="-8" width="100%">
                <bind_state_if_eq subject="speaker" ref_value="0" state="disabled" />
                <style name="slider_main" />
                <bind_style subject="theme" ref_value="0" name="slider_main_light" selector="main" />
                <bind_style subject="theme" ref_value="1" name="slider_main_dark" selector="main" />
                <bind_style subject="theme" ref_value="0" name="slider_indicator_light" selector="indicator" />
                <bind_style subject="theme" ref_value="1" name="slider_indicator_dark" selector="indicator" />
                <style name="slider_knob" selector="knob" />
                <bind_style subject="theme" ref_value="0" name="slider_knob_light" selector="knob" />
                <bind_style subject="theme" ref_value="1" name="slider_knob_dark" selector="knob" />
                <style name="panel_content_disabled" selector="disabled" />
            </lv_slider>
   </view>
</component>