<component>
    <previews>
        <preview width="320" height="240" />
    </previews>
    <styles>
        <style name="weather" text_color="#light" radius="20" bg_color="#accent1_light" border_width="0" pad_all="0" />
        <style name="panel_size" width="320" height="240" />
        <style name="style_header_title_wrapper" layout="flex" flex_flow="column" />
        <style name="style_header_location" width="100%" layout="flex" flex_cross_place="center" flex_main_place="end" />
        <style name="style_header_location_label" pad_top="3" pad_right="4" />
        <style name="tabview" radius="20" layout="flex" flex_flow="column_wrap_reverse" margin_top="0" width="100%" height="100%" bg_opa="0" />
        <style name="tab" radius="20" pad_all="24" text_color="#light" layout="flex" flex_flow="column" flex_main_place="space_between" pad_top="36" pad_bottom="24" />
        <style name="tab_bar" bg_opa="0" translate_y="0" pad_hor="4" pad_ver="4"/>
        <style name="tab_bar_button" border_width="0" text_color="#light" text_font="geist_semibold_14" text_opa="102" />
        <style name="tab_bar_button_checked" bg_color="#light" bg_opa="0" text_color="#light" text_opa="255" border_opa="0" />
    </styles>
   <view>
        <style name="panel_size" />
        <style name="weather" />
        <lv_tabview tab_bar_position="bottom" >
            <style name="tabview" />
            <lv_tabview-tab text="Location 1" style_bg_image_src="weather_location_1_bg">
                <style name="tab" />
                <div name="header_location">
                    <style name="style_header_location" />
                    <lv_label style_text_font="geist_semibold_12" text="Sidney, OH">
                        <style name="style_header_location_label" />
                    </lv_label>
                    <lv_image src="icon_pin"></lv_image>
                </div>
                <div width="100%" style_layout="flex" style_flex_main_place="space_between" style_flex_cross_place="end">
                    <div style_layout="flex" style_flex_cross_place="end">
                        <lv_image src="icon_cloudy"></lv_image>
                        <lv_label style_text_font="geist_semibold_12" text="Coludy" style_pad_left="6" style_margin_bottom="-2"/>
                    </div>
                    <div style_layout="flex">
                        <lv_label bind_text="location1_temp" style_text_font="abril_fatface_80" style_margin_top="-23" style_margin_bottom="-23"></lv_label>
                        <lv_label text="°C" style_text_font="geist_semibold_20" /> 
                    </div>
                </div>
            </lv_tabview-tab>
            <lv_tabview-tab text="Location 2" style_bg_image_src="weather_location_2_bg">
                <style name="tab" />
                <div name="header_location2">
                    <style name="style_header_location" />
                    <lv_label style_text_font="geist_semibold_12" text="Budapest, Hungary">
                        <style name="style_header_location_label" />
                    </lv_label>
                    <lv_image src="icon_pin"></lv_image>
                </div>
                <div width="100%" style_layout="flex" style_flex_main_place="space_between" style_flex_cross_place="end">
                    <div style_layout="flex" style_flex_cross_place="end">
                        <lv_image src="icon_sunny"></lv_image>
                        <lv_label style_text_font="geist_semibold_12" text="Sunny" style_pad_left="6" style_margin_bottom="-2"/>
                    </div>
                    <div style_layout="flex">
                        <lv_label bind_text="location2_temp" style_text_font="big_shoulders_80" style_margin_top="-15" style_margin_bottom="-17"></lv_label>
                        <lv_label text="°C" style_text_font="geist_semibold_20" /> 
                    </div>
                </div>
            </lv_tabview-tab>
            <lv_tabview-tab_bar height="44">
                <style name="tab_bar" />
            </lv_tabview-tab_bar>
            <lv_tabview-tab_button index="0">
                <style name="tab_bar_button" />
                <style name="tab_bar_button_checked" selector="checked" />
            </lv_tabview-tab_button>
            <lv_tabview-tab_button index="1">
                <style name="tab_bar_button" />
                <style name="tab_bar_button_checked" selector="checked" />
            </lv_tabview-tab_button>
        </lv_tabview>
        <panel_header x="#panel_pad" y="#panel_pad" width="content" height="content" style_flex_cross_place="center">
            <div name="header_title_wrapper">
                <style name="style_header_title_wrapper" />
                <lv_label text="Weather" style_text_font="geist_semibold_20" />
                <lv_label text="Fri, Aug 15" style_text_font="geist_regular_14" style_text_opa="200" />
            </div>
        </panel_header>
   </view>
</component>