<component>
    <previews>
        <preview width="320" height="240" />
    </previews>
    <styles>
        <style name="panel_size" width="320" height="240" />
        <style name="stats" width="100%" height="content" layout="flex" flex_main_place="space_between" pad_ver="16" />
        <style name="arc" width="228" height="228" arc_width="42" arc_image_src="light_temp_arc_bg" translate_y="29" margin_bottom="-106" />
        <style name="arc_indicator" arc_width="42" arc_opa="0" />
        <style name="arc_knob" bg_opa="0" border_width="8" border_color="#surface_primary_light" pad_all="6" />
        <style name="arc_knob_dark" border_color="#light" /> 
        <style name="disabled" opa_layered="60" />
    </styles>
   <view extends="card">
        <style name="panel_size" />

        <panel_header width="100%">
            <lv_label text="Light temperature" style_text_font="geist_semibold_20" />
            <switch bind_checked="light_temperature"></switch>
        </panel_header>
        <lv_arc bind_value="light_temperature_temp" min_value="0" max_value="10000" bg_start_angle="160" bg_end_angle="380" start_angle="180">
            <style name="arc" />
            <style name="arc_indicator" selector="indicator" />
            <style name="arc_knob" selector="knob" />
            <bind_style name="arc_knob_dark" subject="theme" ref_value="1" selector="knob" />
            <bind_state_if_eq subject="light_temperature" ref_value="0" state="disabled" />
            <style name="disabled" selector="disabled" />
        </lv_arc>
        <div style_layout="flex" flex_flow="column" style_flex_cross_place="center" style_margin_top="-25">
            <bind_style subject="light_temperature" ref_value="0" name="disabled" />
            <lv_label bind_text="light_temperature_temp" style_text_font="geist_semibold_28" style_text_letter_space="-1" bind_text-fmt="%dK"></lv_label>
            <lv_label text="Dining room" style_text_font="geist_semibold_12" style_text_letter_space="0" style_translate_y="-4"></lv_label>
        </div>
   </view>
</component>